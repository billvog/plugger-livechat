<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room - Plugger Livechat</title>
    <link rel="shortcut icon" href="/assets/icon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/chat.css">
</head>
<body>
    <div class="chat-container">
        <div class="leave-room">
            <button id="leave-room-btn" title="Leave room...">
                Leave <i class="fas fa-door-open"></i>
            </button>
        </div>
        <div class="room-info">
            <div class="copy-room-id">
                <button class="clipboard-btn" data-clipboard-text="<%= roomId %>" title="Copy Room ID to your clipboard">
                    Copy Room ID <i class="fas fa-copy"></i>
                </button>
            </div>
            <div class="user-count">
                Connected users <span class="connected-users-count">0</span>
            </div>
            <div class="user-name">
                Connected as <span class="connected-username"><%= username %></span>
            </div>
        </div>
        <div class="messages"></div>
        <form id="send-message-form">
            <div class="message-input">
                <input type="text" id="message-input" placeholder="Message..."
                required autocomplete="off" maxlength="512" autofocus>
                <button id="message-send" type="submit">Send <i class="fas fa-paper-plane"></i></button>
            </div>
        </form>
    </div>

    <!-- JQuery -->
    <script defer src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- Clipboard.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.6/clipboard.min.js"></script>
    <!-- Socket.io -->
    <script defer src="/socket.io/socket.io.js"></script>
    <!-- Custom -->
    <script>
        const USERNAME = "<%= username %>";
        const ROOM_ID = "<%= roomId %>";
    </script>
    <script defer src="/js/room.js"></script>
    <script> </script>
</body>
</html>